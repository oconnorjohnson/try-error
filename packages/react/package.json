{
  "name": "@try-error/react",
  "version": "0.0.1",
  "description": "React integration for try-error - hooks and components for type-safe error handling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "typescript",
    "error-handling",
    "hooks",
    "components"
  ],
  "author": "Daniel Johnson",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "@try-error/core": "*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "@try-error/core": "workspace:*"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "size-limit": [
    {
      "name": "React Package (Full)",
      "path": "dist/index.js",
      "limit": "3.2 KB"
    },
    {
      "name": "useTry hook only",
      "path": "dist/index.js",
      "import": "{ useTry }",
      "limit": "3.2 KB"
    },
    {
      "name": "TryErrorBoundary only",
      "path": "dist/index.js",
      "import": "{ TryErrorBoundary }",
      "limit": "3.2 KB"
    }
  ]
}
